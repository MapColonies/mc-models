{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "LayerMetadata",
  "allOf": [
    {
      "$ref": "#/definitions/LayerMetadata",
      "type": "object"
    }
  ],
  "definitions": {
    "LayerMetadata": {
      "type": "object",
      "example": {
        "source": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
        "updateDate": "2020-07-13T06:53:16.202Z",
        "resolution": 3.5,
        "ep90": 3,
        "sensorType": "RGB",
        "rms": 3,
        "scale": "3m/px",
        "dsc": "תשתית אורתופוטו בישראל עדכני לאפריל 2019",
        "tileUris": ["additional file 1 uri", "additional file 2 uri"],
        "footprint": {
          "type": "Polygon",
          "coordinates": [
            [
              [100.0, 0.0],
              [101.0, 0.0],
              [101.0, 1.0],
              [100.0, 1.0],
              [100.0, 0.0]
            ]
          ]
        }
      },
      "additionalProperties": true,
      "properties": {
        "source": {
          "$id": "#/properties/source",
          "type": "string",
          "format": "uuid",
          "description": "Layer's unique identifier",
          "example": "012b0cd6-0f53-4c41-ad0b-dbe3b6c83750"
        },
        "updateDate": {
          "$id": "#/properties/updateDate",
          "type": "string",
          "format": "date-time",
          "tsType": "Date",
          "description": "Layer creation time",
          "example": "2020-07-13T06:53:16.202Z"
        },
        "resolution": {
          "$id": "#/properties/resolution",
          "type": "number",
          "description": "Layer resolution",
          "example": 3.5
        },
        "ep90": {
          "$id": "#/properties/ep90",
          "type": "number",
          "description": "accuracy",
          "example": 3
        },
        "sensorType": {
          "$id": "#/properties/sensorType",
          "type": "string",
          "enum": ["VIS", "RGB", "Pan_Sharpen"],
          "description": "Layer sensor type",
          "example": "RGB"
        },
        "rms": {
          "$id": "#/properties/rms",
          "type": "number",
          "description": "",
          "example": 3
        },
        "scale": {
          "$id": "#/properties/scale",
          "type": "string",
          "description": "Scale of layer",
          "example": "3m/px"
        },
        "dsc": {
          "$id": "#/properties/dsc",
          "type": "string",
          "description": "Layer description",
          "example": "תשתית אורתופוטו בישראל עדכני לאפריל 2019"
        },
        "tileUris": {
          "$id": "#/properties/tileUris",
          "type": "array",
          "description": "List of URIs for the layer tiles",
          "example": ["tile 1 uri", "tile 2 uri"],
          "items": {
            "type": "string"
          }
        },
        "geometry": {
          "$id": "#/properties/geometry",
          "type": "object",
          "description": "Geojson footprint of the layer",
          "$ref": "../geojson/GeoJSON.json",
          "tsType": "Object",
          "example": {
            "type": "Polygon",
            "coordinates": [
              [
                [100.0, 0.0],
                [101.0, 0.0],
                [101.0, 1.0],
                [100.0, 1.0],
                [100.0, 0.0]
              ]
            ]
          }
        }
      }
    }
  }
}

{
   "$schema": "http://json-schema.org/draft-07/schema",
   "$id": "ApiHttpResponse",
   "allOf": [
      {
         "$ref": "#/definitions/ApiHttpResponse",
         "type": "object"
      }
   ],
   "definitions": {
      "ApiHttpResponse": {
         "properties": {
            "success": {
               "type": "boolean"
            },
            "data": {
               "type": "object"
            },
            "error": {
               "$ref": "#/definitions/ApiHttpError"
            }
         },
         "required": ["success", "data"]
      },
      "ApiHttpError": {
         "properties": {
            "statusCode": {
               "type": "integer",
               "minimum": 100,
               "maximum": 599
            },
            "message": {
               "type": "string"
            }
         },
         "required": ["statusCode", "message"]
      }
   }
}

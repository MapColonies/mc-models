{
  "name": "@map-colonies/mc-model-types",
  "version": "1.0.1",
  "description": "json schemas for validations and generated ts models",
  "author": "",
  "license": "MIT",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "homepage": "https://github.com/MapColonies/mc-models#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/MapColonies/mc-models.git"
  },
  "bugs": {
    "url": "https://github.com/MapColonies/mc-models/issues"
  },
  "scripts": {
    "prepare": "npm run generate && npm run build",
    "clean": "rimraf generatedTypes && rimraf lib && rimraf *.tgz",
    "generate": "node generateTypes.js",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig-esm.json",
    "release": "standard-version -t mc-model-types@"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^10.0.0",
    "@types/node": "^14.14.14",
    "commitlint": "^9.1.0",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "json-schema-to-typescript": "^9.1.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.0.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "lib/**/*",
    "Schema/**/*"
  ]
}

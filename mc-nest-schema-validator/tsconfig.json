{
   "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES5",
      "sourceMap": true,
      "outDir": "./lib/cjs",
      "baseUrl": "./",
      "incremental": true,
      "esModuleInterop": true,
      "moduleResolution": "node"
   },
   "include": ["."],
   "exclude": ["node_modules", "lib"]
}

{
  "name": "mc-schema-validator",
  "version": "1.0.0",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.5",
    "jest": "^26.1.0",
    "jest-mock-axios": "^4.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig-esm.json",
    "prepare": "npm run build",
    "test": "jest"
  },
  "dependencies": {
    "ajv": "^6.12.3",
    "axios": "^0.19.2"
  },
  "files": ["lib/*"],
  "jest": {
    "roots": [
       "<rootDir>"
    ],
    "testMatch": [
       "**/__tests__/**/*.+(ts|tsx|js)",
       "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
       "^.+\\.(ts|tsx)$": "ts-jest"
    }
 }
}
